<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/appbar" />


    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:layout_marginEnd="16dp"
            android:paddingBottom="8dp"
            app:flexWrap="wrap">


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/tvSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/spinner"
                android:paddingVertical="4dp"
                android:paddingHorizontal="6dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/spinner">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvGte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/md_left_margin"
                    android:lines="1"
                    android:padding="6dp"
                    android:text="@string/gte"
                    android:textColor="@color/content_font_color" />

                <ImageView
                    android:layout_marginEnd="4dp"
                    android:id="@+id/ivGte"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_arrow_drop_down_24" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/spinner">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/md_left_margin"
                    android:lines="1"
                    android:padding="6dp"
                    android:text="@string/lte"
                    android:textColor="@color/content_font_color" />

                <ImageView
                    android:layout_marginEnd="4dp"
                    android:id="@+id/ivLte"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_arrow_drop_down_24" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/spinner">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/search_spinner_node"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/md_left_margin"
                    android:lines="1"
                    android:padding="6dp"
                    android:text="@string/node"
                    android:textColor="@color/content_font_color" />

                <ImageView
                    android:layout_marginEnd="4dp"
                    android:id="@+id/ivNode"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_arrow_drop_down_24" />
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>