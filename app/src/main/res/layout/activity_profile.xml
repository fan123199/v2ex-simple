<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 tools:context="im.fdx.v2ex.ui.node.NodeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/app_toolbar" />

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingEnd="@dimen/md_left_margin"
        android:layout_toEndOf="@id/toolbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/tv_username_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="40dp"
            android:minWidth="10dp"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@color/primary"
            app:layout_constraintLeft_toRightOf="@+id/iv_avatar_profile"
            app:layout_constraintTop_toTopOf="@+id/iv_avatar_profile"
            android:layout_marginTop="-112dp" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_avatar_profile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/radio"
            android:cropToPadding="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_person_black_48dp"/>

        <TextView
            android:id="@+id/tv_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:minWidth="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_prefix_created"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/tv_prefix_created"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.562"
            app:layout_constraintLeft_toRightOf="@+id/tv_prefix_created"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />


        <ScrollView
            android:id="@+id/sv_intro"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/iv_avatar_profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_bio"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintHorizontal_bias="0.0">

            <TextView
                android:id="@+id/tv_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_username_profile"
            android:layout_alignStart="@+id/tv_username_profile"
            android:layout_below="@+id/iv_avatar_profile"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="16dp"
            android:minWidth="10dp"
            style="@style/Text.Bg"
            app:layout_constraintLeft_toLeftOf="@+id/iv_avatar_profile"
            app:layout_constraintRight_toRightOf="@+id/sv_intro"
            app:layout_constraintTop_toBottomOf="@+id/tv_github"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginRight="0dp" />

        <TextView
            android:id="@+id/tv_github"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_github"
            android:drawablePadding="16dp"
            android:onClick="openGithub"
            style="@style/Text.Bg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/iv_avatar_profile"
            app:layout_constraintRight_toRightOf="@+id/sv_intro"
            app:layout_constraintTop_toBottomOf="@+id/sv_intro"
            android:layout_marginRight="0dp" />

        <TextView
            android:id="@+id/tv_bitcoin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_created"
            android:layout_alignRight="@+id/tv_created"
            android:layout_below="@+id/tv_github"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_bitcoin"
            android:drawablePadding="16dp"
            style="@style/Text.Bg"
            android:clickable="true"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/tv_twitter"
            app:layout_constraintRight_toRightOf="@+id/sv_intro"
            app:layout_constraintTop_toBottomOf="@+id/tv_twitter"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginRight="0dp" />

        <TextView
            android:id="@+id/tv_twitter"
            style="@style/Text.Bg"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_username_profile"
            android:layout_alignRight="@+id/tv_username_profile"
            android:layout_below="@+id/tv_bitcoin"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_twitter"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:onClick="openTwitter"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/iv_avatar_profile"
            app:layout_constraintRight_toRightOf="@+id/sv_intro"
            app:layout_constraintTop_toBottomOf="@+id/tv_location" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:hint=""
            android:minWidth="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_username_profile"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_username_profile" />

        <TextView
            android:id="@+id/tv_website"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_website"
            android:drawablePadding="16dp"
            android:minWidth="40dp"
            style="@style/Text.Bg"
            android:onClick="openWeb"
            app:layout_constraintLeft_toLeftOf="@+id/tv_bitcoin"
            app:layout_constraintRight_toRightOf="@+id/sv_intro"
            app:layout_constraintTop_toBottomOf="@+id/tv_bitcoin"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginRight="0dp" />

        <TextView
            android:id="@+id/tv_prefix_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/created_on"
            app:layout_constraintBottom_toBottomOf="@+id/iv_avatar_profile"
            app:layout_constraintLeft_toLeftOf="@+id/tv_username_profile"
            app:layout_constraintTop_toBottomOf="@+id/tv_id"
            app:layout_constraintVertical_bias="0.25"
            android:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/tv_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/introduction"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/iv_avatar_profile"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar_profile"
            android:layout_marginLeft="-8dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>