<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        android:order="10"
        android:title="个性化"
        android:key="group_custom">
        <SwitchPreference
            android:title="回复加入楼层"
            android:key="pref_add_row"
            android:defaultValue="false"
            android:summaryOn="格式: @user #n "
            android:summaryOff="格式: @user " />

    </PreferenceCategory>

    <PreferenceCategory
        android:order="20"
        android:title="消息"
        android:key="group_msg">
        <SwitchPreference
            android:title="未读消息通知"
            android:key="pref_msg"
            android:defaultValue="true"
            android:summaryOn="启用"
            android:summaryOff="关闭" />
        <SwitchPreference
            android:key="pref_background_msg"
            android:title="后台获取未读消息"
            android:summaryOn="启用"
            android:summaryOff="关闭"
            android:defaultValue="false" />
        <ListPreference
            android:defaultValue="900"
            android:entries="@array/period_string"
            android:entryValues="@array/period_int"
            app:useSimpleSummaryProvider="true"
            android:key="pref_msg_period"
            android:title="消息间隔" />
    </PreferenceCategory>

    <PreferenceCategory
        android:order="30"
        android:title="@string/user"
        android:key="group_user">
        <Preference
            android:key="pref_logout"
            android:title="@string/logout"/>
    </PreferenceCategory>
</PreferenceScreen>