<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.V2ex" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorLink">@color/primary</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="android:statusBarColor">@color/status_bar_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>


        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="text_medium">@dimen/text_size_medium</item>
        <item name="text_small">@dimen/text_size_small</item>
        <item name="text_large">@dimen/text_size_large</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/icon</item>
    </style>

    <style name="Theme.V2ex.big2">
        <item name="text_small">@dimen/text_size_small_2</item>
        <item name="text_medium">@dimen/text_size_medium_2</item>
        <item name="text_large">@dimen/text_size_large_2</item>
    </style>

    <style name="Theme.V2ex.big3">
        <item name="text_small">@dimen/text_size_small_3</item>
        <item name="text_medium">@dimen/text_size_medium_3</item>
        <item name="text_large">@dimen/text_size_large_3</item>
    </style>

    <style name="Theme.V2ex.big4">
        <item name="text_small">@dimen/text_size_small_4</item>
        <item name="text_medium">@dimen/text_size_medium_4</item>
        <item name="text_large">@dimen/text_size_large_4</item>
    </style>

    <style name="Theme.V2ex.Settings">
        <item name="colorAccent">@color/primary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="Theme.V2ex.ForEdit">
        <item name="android:colorAccent">@color/primary</item>

        <item name="colorControlNormal">@color/hint</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/white</item>

        <item name="android:editTextStyle">@style/VEditStyle</item>
        <item name="android:listPreferredItemHeightSmall">36dp</item>
        <item name="android:textAppearanceListItemSmall">@style/VText</item>

    </style>

    <style name="Theme.V2ex.Login">
        <item name="android:colorAccent">@color/light_hint</item>

        <item name="colorControlNormal">@color/light_hint</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>


    <style name="VEditStyle" parent="Widget.AppCompat.EditText">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="colorControlNormal">@color/icon</item>
        <item name="android:actionMenuTextColor">@color/toolbar_text</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="VTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/VText</item>
        <item name="tabSelectedTextColor">@color/tab_select</item>
        <item name="tabIndicatorColor">@color/tab_select</item>
        <item name="tabBackground">@color/toolbar_background</item>
        <item name="tabMinWidth">64dp</item>
        <item name="android:textSize">14sp</item>
        <item name="tabMaxWidth">64dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.Light.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="AppTheme.Simple" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/title_text</item>
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textColorPrimary">@color/title_text</item>
    </style>


    <style name="VText.ExpendedCollapseTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/toolbar_text</item>
    </style>

    <style name="Theme.V2ex.TitleTextStyle">
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textSize">?text_large</item>
    </style>

    <style name="VText">
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textSize">?text_medium</item>
    </style>


    <style name="VText.ToolbarStyle">
        <item name="android:textColor">@color/toolbar_text</item>
        <item name="android:textSize">?text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VText.ToolbarStyle.Light">
        <item name="android:textColor">@color/toolbar_text_light</item>
        <item name="android:textSize">?text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VText.ContentStyle">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/content_font_color</item>
        <item name="android:textSize">?text_medium</item>
    </style>

    <style name="VText.Hint">
        <item name="android:textColor">@color/hint</item>
        <item name="android:textSize">?text_small</item>
    </style>

    <style name="VText.LightHint">
        <item name="android:textColor">@color/light_hint</item>
        <item name="android:textSize">?text_small</item>
    </style>

    <!--底部弹出sheet-->
    <style name="BottomSheetDialogStyle" parent="Theme.Design.BottomSheetDialog">
        <!--<item name="android:windowFrame">@null</item>-->
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <!-- 圆形图片 -->
    <style name="circleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



</resources>
