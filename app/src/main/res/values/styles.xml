<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabMinWidth">64dp</item>
        <item name="tabMaxWidth">64dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="AppTheme.Light.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:background">@color/primary_dark</item>
    </style>

    <!--<style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">-->
    <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
    <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
    <!--</style>-->

    <style name="Text.Bg" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/select_background</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ExpendedCollapseTitle">
        <item name="android:textSize">22sp</item>
        <!--<item name="android:maxWidth">20dp</item> not working-->
    </style>

    <style name="CollapseTitle">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
