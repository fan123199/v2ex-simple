<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.V2ex" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorLink">@color/primary</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="android:statusBarColor">?status_bar_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor">
            ?status_bar_white
        </item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="text_medium">@dimen/text_size_medium</item>
        <item name="text_small">@dimen/text_size_small</item>
        <item name="text_large">@dimen/text_size_large</item>

        <item name="item_bg_color">@color/base_night</item>
        <item name="light_background">@color/base_night</item>
        <item name="toolbar_background">@color/base_night</item>
        <item name="status_bar_white">@color/base_night</item>
        <item name="nav_background">@color/base_night</item>
        <item name="bg_refresh">@color/base_night</item>
        <item name="bg_login">@color/base_night</item>
        <item name="android:windowBackground">@color/base_night</item>
    </style>


    <style name="Theme.V2ex.amoled">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorLink">@color/primary</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor">
            @color/black
        </item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="text_medium">@dimen/text_size_medium</item>
        <item name="text_small">@dimen/text_size_small</item>
        <item name="text_large">@dimen/text_size_large</item>

        <item name="item_bg_color">@color/black</item>
        <item name="light_background">@color/black</item>
        <item name="toolbar_background">@color/black</item>
        <item name="status_bar_white">@color/black</item>
        <item name="nav_background">@color/black</item>
        <item name="bg_refresh">@color/black</item>
        <item name="bg_login">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

</resources>